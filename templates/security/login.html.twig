{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="flex justify-center text-brown my-6">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connectée comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
            </div>
        {% endif %}

        <h1 class="text-center text-3xl mb-3">Me connecter</h1>
        <div class="flex flex-col mb-3 ">
            <label for="inputEmail" class="text-2xl" >Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="bg-green rounded-full" autocomplete="email" required autofocus>
            <label for="inputPassword" class="text-2xl">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="bg-green rounded-full" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
        </div>

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="rounded-full bg-green text-white" type="submit">
            Me connecter
        </button>
    </form>
</div>
{% endblock %}
